@model Event

@{
    ViewData["Title"] = "Delete";
}

<div>
    <div class="row pb-2">
        <hr />
        <h3 class="text-danger">Are you sure you want to delete this Event?</h3>
        <hr />
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TypeEvent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeEvent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Organizer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organizer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Starts)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Starts)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ends)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ends)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventLink)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventLink)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-primary" asp-controller="Events" asp-action="Index"><i class="fa-regular fa-circle-left" style="margin-right: 5px;"></i>Back</a>
        <button type="submit" value="Delete" class="btn btn-danger"><i class="fa-regular fa-trash-can" style="margin-right: 5px;"></i>Delete</button>
    </form>
</div>


