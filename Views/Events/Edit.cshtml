﻿@using System.Security.Claims;﻿﻿
@model TangoKultura.Models.Event

@{
    ViewData["Title"] = "Edit Event";
}

<div asp-validation-summary="All"></div>

@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <span class="text-danger">@error.ErrorMessage</span>
}
<hr />
<h2>Edit your Event</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="EventName">Event Name</label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="CreatedBy" />


            <div class="form-group">
                <label asp-for="TypeEvent" class="control-label">Type of Event</label>
                <select asp-for="TypeEvent" class="form-control">
                    <option value="Class">Class</option>
                    <option value="Course">Course</option>
                    <option value="Practice">Practice</option>
                    <option value="Milonga">Milonga</option>
                    <option value="Concert">Concert</option>
                </select>
                <span asp-validation-for="TypeEvent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Organizer">Organizer</label>
                <input asp-for="Organizer" class="form-control" />
                <span asp-validation-for="Organizer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address">Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            @* <div class="form-group">
                <label asp-for="City">City</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div> *@

            <div class="form-group">
                <label asp-for="Date" class="control-label">Sarts Date</label>
                <input asp-for="Date" type="text" class="form-control datepicker" id="Date" autocomplete="off" placeholder="dd-MM-yyyy" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            @if (Model.TypeEvent == "Course")
            {
            <div class="form-group">
                <label asp-for="EndsDate">Finish Date</label>
                <input asp-for="EndsDate" type="text" class="form-control datepicker" id="EndsDate" autocomplete="off" placeholder="dd-MM-yyyy" />
                <span asp-validation-for="EndsDate" class="text-danger"></span>
            </div>                
            }            

            <div class="form-group">
                <label asp-for="Starts">Starts Time</label>
                <input asp-for="Starts" class="form-control timepicker" placeholder="HH:mm" />
                <span asp-validation-for="Starts" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ends">Ends Time</label>
                <input asp-for="Ends" class="form-control timepicker" placeholder="HH:mm" />
                <span asp-validation-for="Ends" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventLink" class="control-label">Event Link</label>
                <input asp-for="EventLink" class="form-control" />
                <span asp-validation-for="EventLink" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary"><i class="fa-regular fa-circle-left" style="margin-right: 5px;"></i>Back</a>
                <button type="submit" class="btn btn-secondary"><i class="fa-regular fa-floppy-disk" style="margin-right: 5px;"></i>Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}